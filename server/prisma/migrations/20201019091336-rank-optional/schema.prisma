datasource db {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  email       String   @unique
  password    String
  firstName   String
  lastName    String
  rank        Rank?
  createdAt   DateTime @default(now())
}

model Rank {
  id          Int      @id @default(autoincrement())
  name        String
}
